{
    "compilerOptions": {
        // "module": "commonjs",
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es2020",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "src",
        "outDir": "dist",
        // "sourceMap": true,
        "sourceMap": true,
        // "noEmitOnError": true,
        "noEmit": true,
        "typeRoots": ["node_modules/@types"],
        "preserveConstEnums": true
        // "paths": {
        //     "/opt/nodejs/node_modules/*": ["./src/layers/node_modules/*"]
        // }
    },
    "exclude": ["node_modules", "**/*.test.ts"]
}
