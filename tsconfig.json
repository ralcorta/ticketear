{
    "compilerOptions": {
        // "module": "commonjs",
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es2020",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        // "noEmitOnError": true,
        "noEmit": true,
        "typeRoots": ["node_modules/@types"],
        "preserveConstEnums": true
        // "paths": {
        //     "*": ["./node_modules/*"] // , "./src/layers/common/nodejs/node_modules/*"
        // }
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
