{
  "name": "uade-eva-project",
  "version": "1.0.0",
  "description": "UADE Project",
  "scripts": {
    "unit": "jest --coverage --verbose --silent --runInBand --ci --reporters=default --reporters=jest-junit",
    "compile": "tsc",
    "lint": "eslint ./src/**/*.ts",
    "test": "npm run compile && npm run unit",
    "clean": "rimraf ./dist && rimraf ./.aws-sam",
    "dev": "npm run sam:debug & npm run esbuild --watch",
    "deploy": "npm run sam:build && npm run sam:deploy",
    "sync:all": "samlocal sync --template config/template.yaml --watch --stack-name ticketear --region us-east-1",
    "sync": "samlocal sync --template config/template.yaml --code --watch --stack-name ticketear --region us-east-1",
    "logs": "samlocal logs --stack-name ticketear --tail --region us-east-1 --filter INFO",
    "logs:all": "samlocal logs --stack-name ticketear --tail --region us-east-1",
    "esbuild": "npm run clean && esbuild src/**/*.ts --outdir=dist --bundle --packages=external --platform=node --target=node20 --sourcemap --minify",
    "builder": "rimraf ./dist && node scripts/builder.mjs",
    "builder:watch": "npm run builder watch",
    "sam:build": "samlocal build --template config/template.yaml --build-in-source",
    "sam:deploy": "samlocal deploy --no-confirm-changeset",
    "sam:debug": "samlocal local start-api --template config/template.yaml --warm-containers EAGER --parameter-overrides ParameterKey=Stage,ParameterValue=dev",
    "sam:deploy:prod": "npm run build && sam build --template config/template.yaml && sam deploy --parameter-overrides Stage=prod",
    "sync:parallel": "npm-run-all --parallel builder:watch sync:code"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ralcorta/ticketear.git"
  },
  "author": "Rodrigo Alcorta",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.93",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.18",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "esbuild": "^0.21.4",
    "esbuild-node-externals": "^1.13.1",
    "eslint": "^8.10.0",
    "jest": "^29.7.0",
    "jest-junit": "^13.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sanitize-filename": "^1.6.3",
    "ts-jest": "^29.1.3",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.569.0",
    "@aws-sdk/lib-dynamodb": "^3.569.0",
    "aws-lambda": "^1.0.7",
    "ioredis": "^5.4.1",
    "uuid": "^9.0.1"
  },
  "jest-junit": {
    "outputDirectory": "./reports/junit",
    "outputName": "test-results.xml"
  }
}